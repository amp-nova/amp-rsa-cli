{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/blogList.json",
  "title": "Blog List",
  "description": "A list of blogs",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "blogs": {
      "type": "array",
      "title": "Blogs",
      "description": "Please select the blogs to display in this list",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/blog.json"
                ]
              }
            }
          }
        ]
      },
      "minItems": 1,
      "maxItems": 100
    }
  }
}
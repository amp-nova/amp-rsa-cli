{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/slider.json",

	"title": "Slider",
	"description": "A carousel of slides",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
   "slides": {
      "type": "array",
      "title": "Slides",
      "description": "Select from banners, images and videos to use in this slider",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/banner.json",
				  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/banner-with-poi.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/image.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/video.json"
                ]
              }
            }
          }
        ]
      },
      "minItems": 1,
      "maxItems": 8
    },
    "loop": {
      "type": "boolean",
      "title": "Loop slider",
      "description": "Infinite slide looping"
    },
    "navigationDots": {
      "type": "boolean",
      "title": "Navigation Dots",
      "description": "Display Navigation dots?"
    }	
   },
	"propertyOrder": []
}

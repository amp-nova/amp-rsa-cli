{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://anyafinn.online/component-simple-banner-external.json",

    "title": "Simple Banner External",
    "description": "Simple Banner Content Type with external image",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "cloudinary_image": {
      "title": "Cloudinary Image",
      "type": "object",
      "properties": {
          "secure_url": {
              "title": "Secure URL",
              "description": "URL for the image",
              "type": "string"
          },
          "public_id":{
              "title": "Public ID",
              "description": "Id (the image name)",
              "type": "string"
          }
      },
      "ui:extension": {
          "name": "cloudinary-browser"
      },
      "propertyOrder": []
  },
    "textPositioning": {
      "title": "Text Positioining",
      "type": "object",
      "properties": {
        "textPositionHorizontal": {
          "type": "string",
          "ui:extension": {
            "name": "default-value-extension",
            "params": {
              "type": "enum",
              "heading": "Content position - Horizontal",
              "description": "Default is Left",
              "default": "left",
              "enum": [
                [
                  "left",
                  "Left"
                ],
                [
                  "center",
                  "Center"
                ],
                [
                  "right",
                  "Right"
                ]
              ]
            }
          }
        },
        "textPositionVertical": {
          "type": "string",
          "ui:extension": {
            "name": "default-value-extension",
            "params": {
              "type": "enum",
              "heading": "Content position - Vertical",
              "description": "Default is Top",
              "default": "middle",
              "enum": [
                [
                  "top",
                  "Top"
                ],
                [
                  "middle",
                  "Middle"
                ],
                [
                  "bottom",
                  "Bottom"
                ]
              ]
            }
          }
        }
      }
    },
    "bannerText": {
      "title": "Banner Text Settings",
      "type": "object",
      "properties": {
        "header": {
          "title": "Header",
          "description": "Add header text",
          "type": "string"
        },
        "subheader": {
          "title": "Subheader",
          "description": "Add Subheader text",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Add description text",
          "type": "string"
        }
      }
    },
    "ctaSettings": {
      "title": "CTA Settings",
      "type": "object",
      "properties": {
             "buttonText": {
          "title": "CTA Text",
          "type": "string",
          "minimum": 4,
          "maximum": 12
        },
        "linkUrl": {
          "title": "CTA URL",
          "type": "string"
        }
   
      }
    }
  },
  "propertyOrder": [
    "cloudinary_image",
    "textPositioning",
    "bannerText",
    "ctaSettings"
  ]
}
{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://anyafinn.online/config-theme.json",

	"title": "Theme",
	"description": "",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
    ],

    "trait:hierarchy": {
		"childContentTypes": [
            "https://anyafinn.online/config-theme-palette.json",
            "https://anyafinn.online/config-theme-typography.json"
        ]
    },
    
    "trait:sortable": {
        "sortBy": [
            {
                "key": "default",
                "paths": [
                    "/label"
                ]
            }
        ]
    },

    "type": "object",
    "properties": {
        "_meta": {
            "title": "",
            "properties": {
                "deliveryKey": {
                    "title": "Slug",
                    "type": "string",
                    "pattern": "theme\/.*"
                }
            }
        },
        "label": {
            "type": "string",
            "title": "Label"
        }
    },

    "required": ["label"],
    
    "definitions": {

    }

}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/customRichText.json",
  "title": "Custom Rich Text",
  "description": "Custom Rich Text Control",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "text": {
      "type": "array",
      "ui:extension": {
        "name": "custom-rich-text",
        "params": {
          "language": "json",
          "styles": ".was-price { color: red; }",
          "tools": {
            "blacklist": [],
            "dc-content-link": {
              "contentTypes": [
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/simple-banner.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/banner.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/banner-with-poi.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/blog.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/blogList.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/card.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/cardList.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/curated-product-grid.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/customRichText.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/product-grid.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/externalBlock.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/image.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/product.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/promo.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/promoList.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/shoppableVideo.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/slider.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/splitBlock.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/text.json",
                "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/video.json",
                "https://anyafinn.online/component-personify-targeted-content.json",
                "https://anyafinn.online/component-dy-ab-content.json",
                "https://anyafinn.online/component-dynamic-blog-list.json"
              ],
               "contentTypeSettings":
                            {
                                "cards":
                                {
                                    "*": "https://www.anyafinn.online/visualization/standalone?vse=\{{vse.domain}}&content=\{{content.sys.id}}"
                                }
                            }
            },
            "inline_styles": {
              "classNames": [
                {
                  "className": "was-price",
                  "label": "Was Price"
                }
              ]
            }
          },
          "toolbar": {
            "layout": [
              {
                "type": "group",
                "children": [
                  {
                    "type": "button",
                    "toolName": "undo"
                  },
                  {
                    "type": "button",
                    "toolName": "redo"
                  }
                ]
              },
              {
                "type": "dropdown",
                "label": "Styles",
                "toolNames": [
                  "inline_styles_className_was-price"
                ]
              },
              {
                "type": "group",
                "children": [
                  {
                    "type": "button",
                    "toolName": "strong"
                  },
                  {
                    "type": "button",
                    "toolName": "em"
                  },
                  {
                    "type": "button",
                    "toolName": "link"
                  }
                ]
              },
              {
                "type": "group",
                "children": [
                  {
                    "type": "button",
                    "toolName": "bullet_list"
                  },
                  {
                    "type": "button",
                    "toolName": "ordered_list"
                  }
                ]
              },
              {
                "type": "group",
                "children": [
                  {
                    "type": "button",
                    "toolName": "dc-image-link"
                  },
                  {
                    "type": "button",
                    "toolName": "image"
                  },
                  {
                    "type": "button",
                    "toolName": "dc-content-link"
                  },
                  {
                    "type": "button",
                    "toolName": "blockquote"
                  },
                  {
                    "type": "button",
                    "toolName": "code_block"
                  },
                  {
                    "type": "button",
                    "toolName": "horizontal_rule"
                  }
                ]
              },
              {
                "type": "group",
                "children": [
                  {
                    "type": "button",
                    "toolName": "clear_formatting"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  },
  "propertyOrder": [
    "text"
  ]
}
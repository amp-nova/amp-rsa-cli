{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/landing-page.json",
  "title": "Landing Page",
  "description": "A re-usable container for all content types",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "_meta":{
    "type":"object",
    "properties":{
      "deliveryKey":{
        "type":"string",
        "title": "URL slug",
      "description": "Enter the URL slug for this page"
      }
    }
  },
    "seo": {
      "title": "SEO",
      "description": "",
      "type": "object",
      "properties": {
        "title": {
          "title": "Title",
          "description": "Meta title field",
          "type": "string",
          "minLength": 0,
          "maxLength": 100
        },
        "description": {
          "title": "Description",
          "description": "Meta description field",
          "type": "string",
          "minLength": 0,
          "maxLength": 200
        }
      },
      "propertyOrder": []
    },
    "contentTypes": {
      "type": "array",
      "title": "Layout",
      "description": "Select and order content to display in the container",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/slider.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/video.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/shoppableVideo.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/text.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/customRichText.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/externalBlock.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/splitBlock.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/image.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/cardList.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/banner.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/blogList.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/promoList.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/megaMenu.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/footer.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/product-grid.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/curated-product-grid.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/banner-with-poi.json"
                ]
              }
            }
          }
        ]
      }
    }
  }
}

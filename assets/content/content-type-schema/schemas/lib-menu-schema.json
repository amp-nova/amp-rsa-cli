{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://anyafinn.online/lib-menu.json",
    
	"type": "object",

    "definitions": {
        "menuItemConfig": {
            "type": "object",
            "title": "Menu",
            "properties": {
                "hidden": {
                    "type": "boolean",
                    "title": "Hidden"
                },
                "priority": {
                    "type": "number",
                    "title": "Priority"
                },
                "content": {
                    "title": "Menu Content",
                    "allOf": [
                        { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
                        {
                            "properties": {
                                "contentType": {
                                    "enum": [
                                        "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/simple-banner.json"
                                    ]
                                }
                            }
                        }
                    ]
                }
            },
            "required": ["priority"]
        }
    }
}
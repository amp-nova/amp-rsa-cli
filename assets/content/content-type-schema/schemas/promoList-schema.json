{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/promoList.json",
	"title": "Promo List",
	"description": "A list of promotions to display",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"promos": {
			"type": "array",
			"title": "Promotions",
			"description": "A list of promotions to display",
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "Promo",
								"enum": [
									"https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/promo.json"
								]
							}
						}
					}
				]
			},
			"minItems": 1,
			"maxItems": 4
		}
	}
}
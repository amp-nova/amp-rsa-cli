{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{{cms.contentBaseUri}}/blog.json",
  "title": "Blog",
  "description": "A Blog Post",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "snippet": {
      "type": "object",
      "title": "Blog Snippet",
      "description": "Blog Snippet",
      "allOf": [
        {
          "$ref": "{{cms.contentBaseUri}}/blogSnippet.json"
        }
      ]
    },
    "content": {
      "type": "object",
      "title": "Blog Content",
      "description": "The main content for the blog",
      "allOf": [
        {
          "$ref": "{{cms.contentBaseUri}}/customRichText.json"
        }
      ]
    },
    "contentTypes": {
      "type": "array",
      "title": "Content Type",
      "description": "Select and order content to display in the page",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "{{cms.contentBaseUri}}/simple-banner.json",
                  "{{cms.contentBaseUri}}/banner.json",
                  "{{cms.contentBaseUri}}/banner-with-poi.json",
                  "{{cms.contentBaseUri}}/card.json",
                  "{{cms.contentBaseUri}}/cardList.json",
                  "{{cms.contentBaseUri}}/curated-product-grid.json",
                  "{{cms.contentBaseUri}}/customRichText.json",
                  "{{cms.contentBaseUri}}/product-grid.json",
                  "{{cms.contentBaseUri}}/externalBlock.json",
                  "{{cms.contentBaseUri}}/image.json",
                  "{{cms.contentBaseUri}}/product.json",
                  "{{cms.contentBaseUri}}/promo.json",
                  "{{cms.contentBaseUri}}/promoList.json",
                  "{{cms.contentBaseUri}}/shoppableVideo.json",
                  "{{cms.contentBaseUri}}/slider.json",
                  "{{cms.contentBaseUri}}/splitBlock.json",
                  "{{cms.contentBaseUri}}/text.json",
                  "{{cms.contentBaseUri}}/video.json",
                  "{{cms.contentBaseUri}}/component-product-carousel.json",
                  "{{cms.contentBaseUri}}/component-teaser.json",
                  "{{cms.contentBaseUri}}/component-personify-targeted-content.json",
                  "{{cms.contentBaseUri}}/component-dy-ab-content.json",
                  "{{cms.contentBaseUri}}/component-dynamic-blog-list.json"
                ]
              }
            }
          }
        ]
      }
    },
    "theme": {
          "title": "Theme",
					"type": "object",
					"properties": {
						"values": {
							"type": "array",
              "maxItems": 1,
							"ui:extension": {
								"name": "hierarchy-picker",
								"params": {
									"nodeId": "0f7077bd-70d2-401a-9cd4-db8cdea5d205"
								}
							},
                            
							"items": {
								"allOf": [{
										"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-reference"
									},
									{
										"properties": {
											"contentType": {
												"enum": [
													"{{cms.contentBaseUri}}/config-theme.json"
												]
											}
										}
									}
								]
							}
						}
					}
        }
  }
}
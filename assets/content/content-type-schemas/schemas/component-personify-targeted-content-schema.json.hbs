{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/component-personify-targeted-content.json",

	"title": "Targeted Content",
	"description": "",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
        "info": {
            "type": "string",
            "const": "ignore",
            "ui:extension": {
                "url": "https://willow-demo-extension-personify.s3-eu-west-1.amazonaws.com/index.html",
                "params": {
                    "type": "coverage"
                }
            }
        },
        "groups": {
            "type": "array",
            "title": "Target Groups",
            "items": {
                "type": "object",
                "title": "Target Group",
                "properties": {
                    "criteria": { "$ref": "#/definitions/personifyXPCriteria" },
                    "components": {
                        "title": "Components",
                        "type": "array",
                        "items": {
                            "title": "Component",
                            "allOf": [
                                { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
                                {
                                    "properties": {
                                        "contentType": { "$ref": "./lib-components.json#/definitions/anyComponent" }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    
    "definitions": {
        "personifyXPCriteria": {
            "type": "object",
            "ui:extension": {
                "url": "https://willow-demo-extension-personify.s3-eu-west-1.amazonaws.com/index.html",
                "params": {
                    "type": "criteria"
                }
            },
            "properties": {
                "behaviors": {
                    "type": "array",
                    "title": "Behaviors",
                    "items": {
                        "type": "string",
                        "title": "Behavior"
                    }
                },
                "tags": {
                    "type": "array",
                    "title": "Tags",
                    "items": {
                        "type": "string",
                        "title": "Tag"
                    }
                }
            }
        }
    }
}
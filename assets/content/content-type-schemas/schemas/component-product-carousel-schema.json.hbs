{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/component-product-carousel.json",
	"title": "Adidas product carousel",
	"description": "A product list that allows manual overrides per product",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"category": {
			"title": "Category",
			"description": "Category",
			"type": "string",
			"enum": [
				"Originals",
				"Featured",
				"Football",
				"Running",
				"Basketball",
				"Training",
				"Golf",
				"Outdoor",
				"Y-3"
			]
		},
		"header": {
			"title": "Header",
			"description": "Header for component",
			"allOf": [
				{ "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
			]
		},
		"items": {
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"type": "object",
				"properties": {
					"product": {
						"title": "Product Selector",
						"description": "description",
						"type": "array",
						"minItems": 0,
						"maxItems": 1,
						"items": {
							"type": "string"
						},
						"ui:extension": {
							"name": "product-selector-commerce-tools"
						}
					},
					"overrides": {
						"type": "object",
						"title": "Overrides",
						"properties": {
							"image": {
								"title": "Image",
								"allOf": [
									{
										"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
									}
								]
							},
							"label": {
								"title": "Label",
								"description": "Label override",
								"allOf": [
									{ "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
								]
							},
							"cta": {
								"title": "CTA",
								"description": "Call to Action",
								"allOf": [
									{ "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
								]
							}
						}
					}
				}
			}
		},
		"link": {
			"type": "object",
			"allOf": [
				{
					"$ref": "{{cms.contentBaseUri}}/link.json"
				}
			]
		}
	},
	"propertyOrder": []
}
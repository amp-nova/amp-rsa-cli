{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/config-brand-color-picker",
	"title": "Brand Colors",
	"description": "Description",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"name": {
			"title": "Name",
			"description": "A name for this collection of colors",
			"type": "string",
			"minLength": 0,
			"maxLength": 64
		},
		"perRow": {
			"title": "Colors Per Row (optional)",
			"description": "Max number of colors displayed in the picker. 0 or empty for unlimited.",
			"type": "integer",
			"minimum": 0,
			"maximum": 100
		},
		"compact": {
			"title": "Compact Display",
			"description": "Display colors without names, in a tightly packed format.",
			"type": "boolean"
		},
		"groups": {
			"title": "Color Groups",
			"description": "Named groups of colors in the palette.",
			"type": "array",
			"minItems": 1,
			"maxItems": 200,
			"items": {
				"type": "object",
				"allOf": [
					{
						"type": "object",
						"properties": {
							"name": {
								"title": "Name",
								"description": "A name for this color group, used to filter relevant colors for a given field (eg. text vs background)",
								"type": "string",
								"minLength": 0,
								"maxLength": 16
							},
							"colors": {
								"title": "Colors",
								"description": "The colors to include in this group.",
								"type": "array",
								"minItems": 1,
								"maxItems": 200,
								"items": {
									"type": "object",
									"allOf": [
										{
											"type": "object",
											"properties": {
												"name": {
													"title": "Name",
													"description": "A name for this color",
													"type": "string",
													"minLength": 0,
													"maxLength": 16
												},
												"color": {
													"title": "Value",
													"description": "The value of this colour (HEX values can be pasted in, eg. #ff0000)",
													"format": "color",
													"type": "string"
												}
											},
											"required": [
												"name",
												"color"
											]
										}
									]
								}
							}
						},
						"required": [
							"name",
							"colors"
						]
					}
				]
			}
		}
	},
	"required": [
		"name",
		"compact"
	],
	"propertyOrder": []
}
{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/config-theme-palette.json",

	"title": "Palette",
	"description": "",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
    ],

    "trait:hierarchy": {
		"childContentTypes": [
        ]
    },

    "trait:sortable": {
        "sortBy": [
            {
                "key": "default",
                "paths": [
                    "/type"
                ]
            }
        ]
    },
    
    "type": "object",
    "properties": {
        "type": {
            "title": "Type",
            "type": "string",
            "const": "Palette"
        },
        "primary": {
            "title": "Primary",
            "allOf": [
                { "$ref": "#/definitions/PaletteColorOptions" }
            ]
        },
        "secondary": {
            "title": "Secondary",
            "allOf": [
                { "$ref": "#/definitions/PaletteColorOptions" }
            ]
        },
        "error": {
            "title": "Error",
            "allOf": [
                { "$ref": "#/definitions/PaletteColorOptions" }
            ]
        },
        "warning": {
            "title": "Warning",
            "allOf": [
                { "$ref": "#/definitions/PaletteColorOptions" }
            ]
        },
        "info": {
            "title": "Info",
            "allOf": [
                { "$ref": "#/definitions/PaletteColorOptions" }
            ]
        },
        "success": {
            "title": "Success",
            "allOf": [
                { "$ref": "#/definitions/PaletteColorOptions" }
            ]
        }
    },
    
    "definitions": {
        "PaletteColorOptions": {
            "type": "object",
            "properties": {
                "light": {
                    "type": "string",
                    "format": "color",
                    "title": "Light"
                },
                "main": {
                    "type": "string",
                    "format": "color",
                    "title": "Main"
                },
                "dark": {
                    "type": "string",
                    "format": "color",
                    "title": "Dark"
                }
            }
        }
    }

}
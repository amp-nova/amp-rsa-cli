{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/container.json",
  "title": "Container",
  "description": "A re-usable container for all content types",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "contentTypes": {
      "type": "array",
      "title": "Content",
      "description": "Select and order content to display in the container",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/simple-banner.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/simple-localized-banner.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/card.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/cardList.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/curated-product-grid.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/customRichText.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/product-grid.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/splitBlock.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/text.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/video.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/container.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/promoList.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/promo.json",
                  "https://anyafinn.online/component-personify-targeted-content.json",
                  "https://anyafinn.online/component-dy-ab-content.json",
                  "https://anyafinn.online/component-dynamic-blog-list.json",
                  "https://anyafinn.online/component-productlistsearch.json"
                ]
              }
            }
          }
        ]
      }
    }
  }
}
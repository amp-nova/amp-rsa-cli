{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{{cms.contentBaseUri}}/container.json",
  "title": "Container",
  "description": "A re-usable container for all content types",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "contentTypes": {
      "type": "array",
      "title": "Content",
      "description": "Select and order content to display in the container",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "{{cms.contentBaseUri}}/simple-banner.json",
                  "{{cms.contentBaseUri}}/simple-localized-banner.json",
                  "{{cms.contentBaseUri}}/card.json",
                  "{{cms.contentBaseUri}}/cardList.json",
                  "{{cms.contentBaseUri}}/curated-product-grid.json",
                  "{{cms.contentBaseUri}}/customRichText.json",
                  "{{cms.contentBaseUri}}/product-grid.json",
                  "{{cms.contentBaseUri}}/splitBlock.json",
                  "{{cms.contentBaseUri}}/text.json",
                  "{{cms.contentBaseUri}}/video.json",
                  "{{cms.contentBaseUri}}/container.json",
                  "{{cms.contentBaseUri}}/promoList.json",
                  "{{cms.contentBaseUri}}/promo.json",
                  "{{cms.contentBaseUri}}/component-personify-targeted-content.json",
                  "{{cms.contentBaseUri}}/component-dy-ab-content.json",
                  "{{cms.contentBaseUri}}/component-dynamic-blog-list.json",
                  "{{cms.contentBaseUri}}/component-productlistsearch.json"
                ]
              }
            }
          }
        ]
      }
    }
  }
}
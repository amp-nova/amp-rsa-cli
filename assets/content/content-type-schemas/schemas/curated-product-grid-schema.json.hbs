{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{{cms.contentBaseUri}}/curated-product-grid.json",
  "title": "Curated Product Grid",
  "description": "A Curated Product Grid",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {

    "products": {
      "title": "Product Selector",
      "description": "Products to display",
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "type": "string"
      },
      "ui:extension": {
        "name": "product-selector-commerce-tools"
      }
    },
    "header": {
      "title": "Header",
      "allOf": [
        { "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
      ]
    }
  },
  "propertyOrder": ["header", "products"]
}

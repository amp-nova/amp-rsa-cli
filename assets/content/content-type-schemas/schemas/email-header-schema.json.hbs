{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/email-header.json",
	"title": "Email Header",
	"description": "Email Header",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"topLinks": {
			"title": "Top Link Settings",
			"type": "object",
			"properties": {
				"leftLinkProperties": {
					"title": "Left Link Properties",
					"properties": {
						"leftLinkText": {
							"type": "string",
							"title": "Text"
						},
						"leftLinkUrl": {
							"type": "string",
							"title": "URL"
						},
						"leftLinkColor": {
							"title": "Left Link Color",
							"properties": {
								"colors": {
									"type": "string",
									"ui:extension": {
										"name": "color-picker",
										"params": {
											"title": "Button Border Color",
											"contentID": "ecb31d0c-7344-4fea-9a17-e064b63aea8b",
											"groups": [
												"Email"
											]
										}
									}
								}
							}
						}
					}
				},
				"rightLinkProperties": {
					"title": "Right Link Properties",
					"properties": {
						"rightLinkText": {
							"type": "string",
							"title": "Text"
						},
						"rightLinkUrl": {
							"type": "string",
							"title": "URL"
						},
						"rightLinkColor": {
							"title": "Right Link Color",
							"properties": {
								"colors": {
									"type": "string",
									"ui:extension": {
										"name": "color-picker",
										"params": {
											"title": "Button Border Color",
											"contentID": "ecb31d0c-7344-4fea-9a17-e064b63aea8b",
											"groups": [
												"Email"
											]
										}
									}
								}
							}
						}
					}
				}
			}
		},
		"logoSettings": {
			"title": "Logo Settings",
			"type": "object",
			"properties": {
				"imageSrc": {
					"title": "Logo image",
					"description": "",
					"type": "object",
					"anyOf": [
						{
							"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
						}
					]
				},
				"imageProperties": {
					"title": "Logo Properties",
					"properties": {
						"imageAlt": {
							"title": "Logo alt text",
							"type": "string",
							"minLength": 0,
							"maxLength": 150
						},
						"imageWidth": {
							"title": "Logo width",
							"description": "This value will be set in pixels.",
							"type": "number",
							"minLength": 0,
							"maxLength": 3
						},
						"linkAlias": {
							"type": "string",
							"title": "Logo Link Alias"
						},
						"linkUrl": {
							"type": "string",
							"title": "Logo Link URL",
							"description": "All images and text in this content block will utilize this link."
						}
					}
				}
			}
		},
		"navSettings": {
			"title": "Navigation Bar Settings",
			"type": "object",
			"properties": {
				"toggle": {
					"title": "Navigation Toggle",
					"description": "Select to display the navigation bar",
					"type": "boolean"
				},
				"navigation": {
					"title": "Navigation",
					"type": "array",
					"minItems": 1,
					"maxItems": 6,
					"items": {
						"type": "object",
						"allOf": [
							{
								"type": "object",
								"properties": {
									"text": {
										"title": "Text",
										"type": "string",
										"minLength": 0,
										"maxLength": 16
									},
									"url": {
										"title": "URL",
										"type": "string"
									},
									"color": {
										"properties": {
											"colors": {
												"type": "string",
												"ui:extension": {
													"name": "color-picker",
													"params": {
														"title": "Button Border Color",
														"contentID": "ecb31d0c-7344-4fea-9a17-e064b63aea8b",
														"groups": [
															"Email"
														]
													}
												}
											}
										}
									}
								}
							}
						]
					}
				}
			}
		}
	}
}
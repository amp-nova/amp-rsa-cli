{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/email-page.json",
	"title": "Email Page",
	"description": "Email Page",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"content": {
			"title": "Content",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"enum": [
									"{{cms.contentBaseUri}}/email-header.json",
									"{{cms.contentBaseUri}}/email-banner.json",
									"{{cms.contentBaseUri}}/email-footer.json",
									"{{cms.contentBaseUri}}/simple-banner.json"
								]
							}
						}
					}
				]
			}
		}
	},
	"propertyOrder": []
}
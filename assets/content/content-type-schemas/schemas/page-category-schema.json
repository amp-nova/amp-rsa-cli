{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://anyafinn.online/page-category.json",

	"title": "Category Page",
	"description": "",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
    ],
    
    "trait:hierarchy": {
		"childContentTypes": [
            "https://anyafinn.online/page-group.json",
            "https://anyafinn.online/page-category.json"
        ]
    },

    "trait:sortable": {
        "sortBy": [
            { "key": "default", "paths": ["/menu/priority"] }
        ]
    },
	
	"type": "object",
	"properties": {
        "_meta": {
            "title": "",
            "properties": {
                "deliveryKey": {
                    "title": "Slug",
                    "type": "string",
                    "pattern": "category\/.*"
                }
            }
        },
        "title": {
            "type": "string",
            "title": "Title"
        },
        "name": {
            "type": "string",
            "title": "Category Name"
        },
        "hideProductList": {
            "title": "Hide Product List",
            "description": "Hide Product List for a Category Landing Page for instance.",
            "type": "boolean"
        },
        "menu": { "$ref": "./lib-menu.json#/definitions/menuItemConfig" },
        "components": {
            "title": "Components",
            "type": "array",
            "items": {
                "title": "Component",
                "allOf": [
                    { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
                    {
                        "properties": {
                            "contentType": { "$ref": "./lib-components.json#/definitions/anyComponent" }
                        }
                    }
                ]
            }
        }
    },
    
    "definitions": {
    }
}
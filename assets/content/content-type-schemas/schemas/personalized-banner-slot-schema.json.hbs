{ 
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{{cms.contentBaseUri}}/personalized-banner-slot.json",
  "title": "Personalized Banner Slot",
  "description": "A Slot that can accept multiple banner for different segments",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "segments": {
      "type": "array",
      "title": "Content",

      "items": {
        "type": "object",
        "properties": {
          "segment": {
            "type": "string",
            "title": "Segment",
            "enum": [
              "bargain-hunter",
              "fashionista",
              "home-trendsetter",
              "globe-trotter"
            ]
          },
          "content": {
            "title": "Content",
            "allOf": [
              {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
              },
              {
                "properties": {
                  "contentType": {
                    "title": "contentType",
                    "enum": [
                      "{{cms.contentBaseUri}}/simple-banner.json",
                      "{{cms.contentBaseUri}}/banner.json",
					            "{{cms.contentBaseUri}}/banner-with-poi.json",
                      "{{cms.contentBaseUri}}/slider.json",
                      "{{cms.contentBaseUri}}/video.json"
                    ]
                  }
                }
              }
            ]
          }
        },
        "propertyOrder": [
          "segment",
          "content"
        ]
      }
    }
  }
}
{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{{cms.contentBaseUri}}/simple-localized-banner.json",
  "title": "Simple Localized Banner",
  "description": "Simple Localized Banner Content Type",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "image": {
      "title": "Image",
      "description": "Main Image",
      "type": "object",
      "allOf": [
        {
          "$ref": "{{cms.contentBaseUri}}/di-image.json"
        }
      ]
    },
    "textPositioning": {
      "title": "Text Positioining",
      "type": "object",
      "properties": {
        "textPositionHorizontal": {
          "type": "string",
          "minLength": 0,
          "maxLength": 10000,
          "ui:extension": {
            "name": "default-value-extension",
            "params": {
              "type": "enum",
              "heading": "Content position - Horizontal",
              "description": "Default is Left",
              "default": "left",
              "enum": [
                [
                  "left",
                  "Left"
                ],
                [
                  "center",
                  "Center"
                ],
                [
                  "right",
                  "Right"
                ]
              ]
            }
          }
        },
        "textPositionVertical": {
          "type": "string",
          "minLength": 0,
          "maxLength": 10000,
          "ui:extension": {
            "name": "default-value-extension",
            "params": {
              "type": "enum",
              "heading": "Content position - Vertical",
              "description": "Default is Top",
              "default": "middle",
              "enum": [
                [
                  "top",
                  "Top"
                ],
                [
                  "middle",
                  "Middle"
                ],
                [
                  "bottom",
                  "Bottom"
                ]
              ]
            }
          }
        }
      }
    },
    "bannerText": {
      "title": "Banner Text Settings",
      "type": "object",
      "properties": {
        "header": {
          "title": "Header",
          "description": "Header text for the banner",
          "validation": "Please enter less than 255 characters",
          "ui:extension": {
            "name": "localisation"
          },
          "allOf": [
            {
              "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
            },
            {
              "properties": {
                "values": {
                  "items": {
                    "properties": {
                      "value": {
                        "title": "Header",
                        "description": "Header text for the banner",
                        "type": "string",
                        "minLength": 0,
                        "maxLength": 255
                      }
                    }
                  }
                }
              }
            }
          ]
        },
        "subheader": {
          "title": "Subheader",
          "description": "Add Subheader text",
          "allOf": [
            { "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
          ]
        },
        "description": {
          "title": "Description",
          "description": "Add Description text",
          "allOf": [
            { "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
          ]
        }
      }
    },
    "ctaSettings": {
      "title": "Call-to-Action Settings",
      "type": "object",
      "properties": {
        "buttonText": {
          "title": "CTA Text",
          "description": "Add Call-to-Action text",
          "allOf": [
            { "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
          ]
        },
        "linkUrl": {
          "title": "CTA URL",
          "type": "string",
          "minLength": 0,
          "maxLength": 10000
        }
        
      }
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/simple-banner.json",
  "title": "Simple Banner",
  "description": "Simple Banner Content Type",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "_environment": {
      "type": "object",
      "properties": {
        "mondayid": {
          "title": "Monday Task ID (internal)",
          "description": "Internal Monday ID - set automatically when creating a content item",
          "type": "string"
        }
      }
    },
    "image": {
      "title": "Image",
      "description": "Main Image",
      "type": "object",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/di-image.json"
        }
      ]
    },
    "textPositioning": {
      "title": "Text Positioining",
      "type": "object",
      "properties": {
        "textPositionHorizontal": {
          "type": "string",
          "ui:extension": {
            "name": "default-value-extension",
            "params": {
              "type": "enum",
              "heading": "Content position - Horizontal",
              "description": "Default is Left",
              "default": "left",
              "enum": [
                [
                  "left",
                  "Left"
                ],
                [
                  "center",
                  "Center"
                ],
                [
                  "right",
                  "Right"
                ]
              ]
            }
          }
        },
        "textPositionVertical": {
          "type": "string",
          "ui:extension": {
            "name": "default-value-extension",
            "params": {
              "type": "enum",
              "heading": "Content position - Vertical",
              "description": "Default is Top",
              "default": "middle",
              "enum": [
                [
                  "top",
                  "Top"
                ],
                [
                  "middle",
                  "Middle"
                ],
                [
                  "bottom",
                  "Bottom"
                ]
              ]
            }
          }
        }
      }
    },
    "bannerText": {
      "title": "Banner Text Settings",
      "type": "object",
      "properties": {
        "header": {
          "title": "Header",
          "description": "Add header text",
          "type": "string"
        },
        "subheader": {
          "title": "Subheader",
          "description": "Add Subheader text",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Add description text",
          "type": "string"
        }
      }
    },
    "ctaSettings": {
      "title": "CTA Settings",
      "type": "object",
      "properties": {
             "buttonText": {
          "title": "CTA Text",
          "type": "string",
          "minimum": 4,
          "maximum": 12
        },
        "linkUrl": {
          "title": "CTA URL",
          "type": "string"
        }
   
      }
    }
  },
  "propertyOrder": [
    "image",
    "textPositioning",
    "bannerText",
    "ctaSettings",
    "_environment"
  ]
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/simple-localized-banner.json",
  "title": "Simple Localized Banner",
  "description": "Simple Localized Banner Content Type",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "image": {
      "title": "Image",
      "description": "Main Image",
      "type": "object",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/di-image.json"
        }
      ]
    },
    "textPositioning": {
      "title": "Text Positioining",
      "type": "object",
      "properties": {
        "textPositionHorizontal": {
          "type": "string",
          "minLength": 0,
          "maxLength": 10000,
          "ui:extension": {
            "name": "default-value-extension",
            "params": {
              "type": "enum",
              "heading": "Content position - Horizontal",
              "description": "Default is Left",
              "default": "left",
              "enum": [
                [
                  "left",
                  "Left"
                ],
                [
                  "center",
                  "Center"
                ],
                [
                  "right",
                  "Right"
                ]
              ]
            }
          }
        },
        "textPositionVertical": {
          "type": "string",
          "minLength": 0,
          "maxLength": 10000,
          "ui:extension": {
            "name": "default-value-extension",
            "params": {
              "type": "enum",
              "heading": "Content position - Vertical",
              "description": "Default is Top",
              "default": "middle",
              "enum": [
                [
                  "top",
                  "Top"
                ],
                [
                  "middle",
                  "Middle"
                ],
                [
                  "bottom",
                  "Bottom"
                ]
              ]
            }
          }
        }
      }
    },
    "bannerText": {
      "title": "Banner Text Settings",
      "type": "object",
      "properties": {
        "header": {
          "title": "Header",
          "description": "Header text for the banner",
          "validation": "Please enter less than 255 characters",
          "ui:extension": {
            "name": "localisation"
          },
          "allOf": [
            {
              "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
            },
            {
              "properties": {
                "values": {
                  "items": {
                    "properties": {
                      "value": {
                        "title": "Header",
                        "description": "Header text for the banner",
                        "type": "string",
                        "minLength": 0,
                        "maxLength": 255
                      }
                    }
                  }
                }
              }
            }
          ]
        },
        "subheader": {
          "title": "Subheader",
          "description": "Add Subheader text",
          "type": "string",
          "minLength": 0,
          "maxLength": 10000
        },
        "description": {
          "title": "Description",
          "description": "Add description text",
          "type": "string",
          "minLength": 0,
          "maxLength": 10000
        }
      }
    },
    "ctaSettings": {
      "title": "CTA Settings",
      "type": "object",
      "properties": {
        "buttonText": {
          "title": "CTA Text",
          "type": "string",
          "minLength": 0,
          "maxLength": 12
        },
        "linkUrl": {
          "title": "CTA URL",
          "type": "string",
          "minLength": 0,
          "maxLength": 10000

        }
        
      }
    }
  }
}
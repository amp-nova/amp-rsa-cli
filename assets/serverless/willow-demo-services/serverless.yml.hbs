service:
  name: willow-demo-services

provider:
  name: aws
  runtime: nodejs12.x
  stage: ${opt:stage, '{{provider.stage}}'}
  region: ${opt:region, '{{provider.region}}'}
  environment:
    SERVICE: ${self:service}
    STAGE: ${self:provider.stage}
    REGION: ${self:provider.region}
    NO_COLOR: ${env:NO_COLOR, 'true'}
    PRODUCTION_CONTENT_DELIVERY_HOST: {{provider.environment.productionContentDeliveryHost}}
    STAGING_CONTENT_DELIVERY_HOST:  {{provider.environment.stagingContentDeliveryHost}}
    TRUSTED_HOST_SUFFIXES: .cdn.content.amplience.net,.staging.bigcontent.io
    MANAGEMENT_API_KEY:  {{provider.environment.clientId}}
    MANAGEMENT_API_SECRET: {{provider.environment.clientSecret}}
    MANAGEMENT_HUB_ID: {{provider.environment.hubId}}
  iamRoleStatements:
    - Effect: Allow
      Action:
        - translate:TranslateText
        - comprehend:DetectDominantLanguage
      Resource: "*"

plugins:
  - serverless-plugin-typescript
  - serverless-plugin-optimize
  - serverless-offline

custom:
  optimize:
    external: ["jsonpath", "swagger-ui-dist", "static-eval", "escodegen", "estraverse", "esutils", "underscore"]

functions:
  index:
    handler: src/index.handler
    timeout: 60
    events:
      - http:
          cors: true
          path: "{proxy+}"
          method: any

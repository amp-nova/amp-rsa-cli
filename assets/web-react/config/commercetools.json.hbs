{
    "authUrl": "{{commercetools.authUrl}}",
    "apiUrl": "{{commercetools.apiUrl}}",
    "projectKey": "{{commercetools.projectKey}}",
    "clientId": "{{commercetools.clientId}}",
    "clientSecret": "{{commercetools.clientSecret}}",
    "defaultScopes": [
    {{#each commercetools.defaultScopes}}
        "{{this}}"{{#unless @last}},{{/unless}}
    {{/each}}
    ],
    "defaultFacets": [
    {{#each commercetools.defaultFacets}}
        {
            "type": "{{this.type}}",
            "field": "{{this.field}}",
            "title": "{{this.title}}"
        }{{#unless @last}},{{/unless}}
    {{/each}}
    ]
}